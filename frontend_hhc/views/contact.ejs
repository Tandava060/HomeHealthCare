        <!-- start contact form section -->
        <section class="wow fadeIn big-section" id="section-down"  style="padding-top:15px ">
            <div class="container">
                <div class="row equalize sm-equalize-auto">
                    <div class="col-md-6 col-sm-12 col-xs-12 sm-margin-30px-bottom wow fadeInLeft">
                        <div class="padding-fifteen-all bg-light-gray border-radius-6 md-padding-seven-all xs-padding-30px-all height-100">
                                                                   
                                <% if (status) {%> 
                                    <% if (status == true) {%>  
                                        <h3 style="text-align: center;font-size: 28px;margin: 45% auto;font-weight: bold;">Your message has been sent succesfully. <br>We request you to also send us a mesage at +230 59810950 (message/whatsapp)</h3>
                                        <% } else { %>
                                            <div style="text-align: center;font-size: 25px;margin: 45% auto;font-weight: bold;">
                                                <h3>Your message was not sent succesfully.</h3>
                                                <h4>Try again later.</h4>
                                            </div>
                                          
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-extra-dark-gray alt-font text-large font-weight-600 margin-25px-bottom display-block">Get in touch with us</span> 
                            <form id="contact-form" action="/contact" method="POST">
                                <div>
                                    <div id="success-contact-form" class="no-margin-lr"></div>
                                    <input type="text" name="name" id="name" placeholder="Name*" class="border-radius-4 bg-white medium-input" required>
                                    <input type="email" name="email" id="email" placeholder="E-mail*" class="border-radius-4 bg-white medium-input" required>
                                    <input type="text" name="title" id="subject" placeholder="Project Title*" class="border-radius-4 bg-white medium-input" required>
                  
                                    <div class="select-style border-radius-4 bg-white medium-select">
                                        <select name="budget" id="budget" class="bg-transparent no-margin-bottom" required>
                                            <option value="#">Select your budget</option>
                                            <option value="$500 - $1000">$300 - $500 | Rs 9999 - Rs 25000</option>
                                            <option value="$1000 - $2000">$500 - $1000 | Rs 25000 - Rs 40000 </option>
                                            <option value="$2000 - $5000">$1000 - $3000 | Rs 40000 - Rs 120000 </option>
                                            <option value="$3000+">$3000 | Rs 120000 +</option>
                                        </select>
                                    </div>
                                   
                                    <textarea name="description" id="comment" placeholder="Describe your project" rows="5" class="border-radius-4 bg-white medium-textarea" required></textarea>
                                    <button id="contact-us-button" type="submit" class="btn btn-small border-radius-4 btn-dark-gray">send message</button>
                                </div>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12 last-paragraph-no-margin wow fadeInRight">
                        <div class="padding-ten-all bg-light-gray border-radius-6 md-padding-seven-all xs-padding-30px-all height-100 sm-text-center">
                            <img src="/images/screen3.jpg" alt="" class="border-radius-6 margin-35px-bottom xs-margin-30px-bottom">
                            <span class="text-large font-weight-600 alt-font text-extra-dark-gray margin-5px-bottom display-block">Do you have more specific needs?</span>
                            <p>While our core activities lie in web development and mobile app development, we also specialise in research and development of  to enhance current  industry standards such as one-touch deployment of intelligent e-commerce platforms or affordable and secure online payment gateways.
                            </p>
                            <p>If you have any specific queries or need very fast responses, you can also contact us via phone or whatsapp or even email us. </p>
                            <a href="#contact-details" class="btn btn-dark-gray btn-small text-extra-small border-radius-4 margin-25px-top">Contact Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
         </div>
        <!-- end contact form section -->
        <!-- start information section -->
        <section class="no-padding-tb bg-light-gray wow fadeIn" id="contact-details">
